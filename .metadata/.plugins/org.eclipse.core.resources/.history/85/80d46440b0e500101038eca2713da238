package ArithmeticException;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		
		while(true) {
		System.out.println("Escolha o operador lógico| + | - | * | / |");
		char operador = sc.next().charAt(0);
		System.out.println("Digite o primeiro numero a ser calculado: ");
		int numero1 = sc.nextInt();
		System.out.println("Digite o segundo numero a ser calculado: ");
		int numero2 = sc.nextInt();
		if(operador == '+') {
			int soma = 0;
			soma = numero1 + numero2;
			System.out.println("a soma é de: " + soma);
		}else if(operador == '-') {
			int subtração = 0;
			subtração =numero1 - numero2;
			System.out.println("A subtração é de: "  + subtração);
		}else if(operador == '*') {
			int vezes = 0;
			vezes = numero1 * numero2;
			System.out.println("A multiplicação é de: " + vezes);
		}else if(operador == '/') {
			int divisao = 0;
			divisao = numero1 / numero2;
			System.out.println("A divisão é de: " + divisao);
		}
		
		
		}
		
		
	}

}
