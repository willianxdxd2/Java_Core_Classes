package main;

public class MinhaThread2 extends Thread{
	
	
	public void run() {
		
		for(int i  = 0 ; i <= 10 ; i++) {
		System.out.println("Thread2 rodando");
		try {Thread.sleep(3000);}catch(InterruptedException e) {
			e.getMessage();
		}
		if(i == 10) {
			MinhaThread t = new MinhaThread();
		t.setControle(false);
		}
	}}
	}

