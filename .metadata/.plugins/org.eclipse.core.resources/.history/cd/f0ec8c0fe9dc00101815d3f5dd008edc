package sQLExceptionExercicio5;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class Main {

	public static void main(String[] args) {
		String url = "jdbc:mysql://localhost:3306/banco_com_java?useSSL=false&serverTimezone=UTC";
		String usuario = "root";
		String senha = "123456789123456789";
		String query = "UPDATE clientes SET nome = 'pedro', email= 'nada'";
		
		
		try {
			Connection conn = DriverManager.getConnection(url,usuario,senha);
			System.out.println("conexao");
			Statement stmt = conn.createStatement();
			stmt.execute(query);
		}catch(SQLException e) {
		 System.out.println("---Erro de query---" + e.getMessage());
		}
		
		
		

	}

}
