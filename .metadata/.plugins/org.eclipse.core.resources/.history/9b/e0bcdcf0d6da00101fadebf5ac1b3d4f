package exercicio4FileReader;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		File file = new File("C:\\exerciciosFile\\Transacoes.txt");
		
		try(Scanner sc =new Scanner(file)){
			sc.useDelimiter(";");
			ArrayList<Integer> quantidades = new ArrayList<>();
			ArrayList<Double> preços = new ArrayList<>();
			ArrayList<String> objetos = new ArrayList<>();
			sc.useDelimiter(";|\\R");
			while(sc.hasNext()) {
				String palavra = sc.next();
				
				palavra = palavra.replace(",", ".");
				try {
					int n=Integer.parseInt(palavra);
						quantidades.add(n);
				}catch(NumberFormatException e) {
					try {
						double m=Double.parseDouble(palavra);
	

						preços.add(m);
					}catch(NumberFormatException e1) {

						objetos.add(palavra);
					}
				}
			}
		for(String objeto : objetos) {
			//System.out.println(objeto);

		}
		for(Double preco : preços) {
			System.out.println(preços);

		}
		for(int quantidade : quantidades) {
			//System.out.println(quantidade);
		}
			
		}catch(FileNotFoundException e) {
			System.out.println(e.getMessage());
		}

	}

}
